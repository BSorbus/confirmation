function showHideFields() {
  var no_vialid_thru = "GL- GS- MA- GS- GC- IW-"
  var pos = no_vialid_thru.indexOf($("#id_number_prefix").val());
  if (pos < 0) {
    document.getElementById("certificate_valid_thru").disabled = false;
    $('#id_valid_thru').slideDown('normal');
  }
  else {
    document.getElementById("certificate_valid_thru").value = '';
    document.getElementById("certificate_valid_thru").disabled = true;
    $('#id_valid_thru').fadeOut('slow');
  }

};


$(document).ready(function(){
  $("#id_number_prefix").on("change", function(){
    showHideFields();
  });    
});

